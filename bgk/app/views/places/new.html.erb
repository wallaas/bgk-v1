
    <%= form_for(@place) do |f| %>
      <div class="field">
        <p>
          <%= f.label :place_name %><br/>
          <%= f.text_field :place_name %>
        </p>
        <p>
          <%= f.label :owner %><br/>
          <%= f.text_field :owner %>
        </p>
        <p>
          <%= f.label :short_description %><br/>
          <%= f.text_area :short_description %>
        </p>
        <p>
          <%= f.label :address %><br/>
          <%= f.text_field :address %>
        </p>
        <p>
          <%= f.label :website %><br/>
          <%= f.url_field :website %>
        </p>
        <p>
          <%= f.label :email %><br/>
          <%= f.email_field :email %>
        </p>
        <p>
          <%= f.label :telephone %><br/>
          <%= f.telephone_field :telephone %>
        </p>
        <p>
          <%= f.label :opening_hours %><br/>
          <%= f.text_area :opening_hours %>
        </p>
        <p>
          <%= f.label :passion_quote %><br/>
          <%= f.text_area :passion_quote %>
        </p>
        <p>
          <%= f.label :passion_text %><br/>
          <%= f.text_area :passion_text %>
        </p>
    </div>
    <div class="actions">
      <%= f.submit "Create" %>
    </div>
    <% end %>
